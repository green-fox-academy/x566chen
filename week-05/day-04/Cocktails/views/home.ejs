<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Cocktails</title>
    <link rel="stylesheet" type="text/css" href="/static/style.css">
  </head>
  <body>
    <h1>Cocktails</h1>
    
    <div>
        <div id='alcohollist'>
            <a href='/'=>ALL</a>
            <% alcoholList.forEach(alcohol=>{ %>
                <a href='?alcohol=<%=alcohol %>'>
                <%= alcohol%>
            </a>
        <%  }) %>
    </div>

    <table>
        <thead>
          <tr>
            <th>NAME</th>
            <th>PRICE</th>
          </tr>
        </thead>
        <tbody>
          <% cocktails.forEach(cocktail=> {%>
          <tr>
            <td>
              <div>
                <%= cocktail.name %>
                <% if(!cocktail.isAlcoholic){ %>
                 <p>(non-alcoholic)</p>
                <%} %>
              </div>
              <p><% cocktail.contains %></p>
            </td>
            <td><%= cocktail.price %></td> 
          </tr>
          <%})%>
        </tbody>
      </table>
      </div>
  </body>
</html>